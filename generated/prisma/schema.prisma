generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  nama                    String
  nik                     String        @id
  email                   String        @unique
  password                String
  jurusan                 Jurusan       @default(umum)
  role                    Role          @default(civitas_faste)
  createdAt               DateTime      @default(now())
  updateAt                DateTime      @updatedAt
  nomor_identitas_tunggal String        @unique
  resetToken              String?
  resetTokenExpiry        DateTime?
  barangUnit              BarangUnit[]
  peminjamanP             PeminjamanP[]
}

model DataBarang {
  kode_barang  String       @id
  jenis_barang String
  merek        String
  barangUnit   BarangUnit[]
}

model DataLokasi {
  kode_lokasi String        @id
  lokasi      String
  jurusan     Jurusan       @default(umum)
  status      StatusLokasi  @default(tidakDipinjam)
  barangUnit  BarangUnit[]
  monitoring  Monitoring[]
  peminjamanP PeminjamanP[]
}

model BarangUnit {
  nup             String           @id
  kodeBarang      String
  lokasi          String
  nikUser         String
  status          StatusB          @default(Tersedia)
  jurusan         Jurusan          @default(umum)
  createdAt       DateTime         @default(now())
  dataBarang      DataBarang       @relation(fields: [kodeBarang], references: [kode_barang])
  dataLokasi      DataLokasi       @relation(fields: [lokasi], references: [kode_lokasi])
  user            User             @relation(fields: [nikUser], references: [nik])
  monitoring      Monitoring[]
  peminjamanItems PeminjamanItem[]
}

model PeminjamanP {
  id             Int              @id @default(autoincrement())
  userNik        String
  barangUnitId   String?
  kodeLokasi     String?
  lokasiTambahan String?
  no_hp          String
  createdAt      DateTime         @default(now())
  Agenda         String
  waktuMulai     DateTime
  waktuSelesai   DateTime
  verifikasi     StatusBooking    @default(pending)
  status         StatusP          @default(booking)
  qrCode         String?
  waktuAmbil     DateTime?
  waktuKembali   DateTime?
  logScanBMN     LogScanBMN[]
  items          PeminjamanItem[]
  lokasi         DataLokasi?      @relation(fields: [kodeLokasi], references: [kode_lokasi])
  user           User             @relation(fields: [userNik], references: [nik])
}

model LogScanBMN {
  id           Int         @id @default(autoincrement())
  peminjamanId Int
  jenis        String
  waktuScan    DateTime    @default(now())
  petugasNik   String
  keterangan   String?
  peminjaman   PeminjamanP @relation(fields: [peminjamanId], references: [id])
}

model PeminjamanItem {
  id           Int         @id @default(autoincrement())
  peminjamanId Int
  nupBarang    String
  barangUnit   BarangUnit  @relation(fields: [nupBarang], references: [nup])
  peminjaman   PeminjamanP @relation(fields: [peminjamanId], references: [id])

  @@index([peminjamanId])
  @@index([nupBarang])
}

model Monitoring {
  id             String         @id
  nupBarang      String
  waktu          DateTime
  plt            String
  kondisiBarang  KondisiBarangM @default(baik)
  lokasiBarang   String?
  lokasiTambahan String?
  foto           String
  keterangan     String?
  dataLokasi     DataLokasi?    @relation(fields: [lokasiBarang], references: [kode_lokasi])
  barangUnit     BarangUnit     @relation(fields: [nupBarang], references: [nup])
}

enum Role {
  civitas_faste
  staff
  kepala_bagian_akademik
  staff_prodi
}

enum Jurusan {
  umum
  tif
  si
  te
  ti
  mt
}

enum StatusBooking {
  pending
  diterima
  ditolak
}

enum StatusP {
  booking
  aktif
  selesai
  batal
}

enum StatusB {
  Tersedia
  TidakTersedia
}

enum KondisiBarangM {
  baik
  rusak_ringan
  rusak_berat
}

enum StatusLokasi {
  dipinjam
  tidakDipinjam
  belumTersedia
}
